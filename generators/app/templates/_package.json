{
  "name": "<%= inputs.packageName %>",
  "version": "0.0.1",
  "description": "<%= inputs.pluginName %>",
  "main": "lib/plugin.js",
  "dependencies": {
    "megadraft": "^0.6.5",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "babel-preset-env":   "^1.7.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "es6-shim": "^0.35.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-watch": "^5.1.2",
    "estraverse-fb": "^1.3.2",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-sass": "^4.0.2",
    "gulp-util": "^3.0.8",
    "husky": "^2.3.0",
    "jest": "24.8.0",
    "jsdom": "^15.1.1",
    "rimraf": "^2.5.2",
    "lint-staged": "^8.1.7",
    "prettier": "^1.13.7",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "peerDependencies": {},
  "scripts": {
    "start": "gulp dev-server",
    "test": "jest --env=jsdom",
    "test:watch": "jest --watchAll --env=jsdom",
    "build:css": "gulp sass",
    "build:lib": "babel src/ -d lib/",
    "build:dist": "rimraf dist && webpack --config webpack.config.dist.js --optimize-minimize",
    "build": "npm run build:lib && npm run build:dist && npm run build:css",
    "coverage": "jest --env=jsdom --coverage --no-cache",
    "prepublish": "npm run build",
    "lint": "eslint src tests",
    "lint:watch": "esw -w src tests",
    "watch": "babel -d lib/ src/ --watch",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**/*.js",
      "**/lib/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "<%= inputs.repositoryURL %>"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "megadraft",
    "editor",
    "react",
    "draftjs"
  ],
  "author": {
    "author": "<%= inputs.authorName %>",
    "email": "<%= inputs.authorEmail %>",
    "url": "<%= inputs.authorEmail || inputs.homepage %>"
  },
  "license": "MIT",
  "bugs": {
    "url": "<%= inputs.issuesURL %>"
  },
  "homepage": "<%= inputs.homepage %>",
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "**/tests/**/*_test.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/helpers/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|lib|node_modules)[/\\\\]"
    ]
  }
}
